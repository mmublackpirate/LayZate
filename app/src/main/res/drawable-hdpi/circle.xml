
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item android:right="1dp" android:top="1dp"><shape android:shape="oval">
            <corners android:radius="100dp" />

            <solid android:color="#ff3e403e" />
        </shape></item>
        <item android:bottom="1dp" android:left="1dp"><shape android:shape="oval">
            <gradient android:angle="270" android:endColor="#ff0e93e2" android:startColor="#ff0a9eba" />

            <stroke android:width="1dp" android:color="#ff3e403e" />

            <corners android:radius="1000dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    </layer-list></item>


</selector>